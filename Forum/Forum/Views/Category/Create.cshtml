@model Forum.Models.Category
@{
    ViewBag.Title = "Create category";
}

<h2>Create new category</h2>

<hr />
<div class="container">
    <div class="well">
        @using (Html.BeginForm("Create", "Category", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.DateCreated)
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <br />
            <div class="form-group">
                @Html.LabelFor(m => m.CategoryName, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Description, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 5 })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-4">
                    <input type="submit" class="btn btn-success" value="Create" />
                </div>
            </div>
        }
    </div>
</div>