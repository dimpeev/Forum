@model Forum.Models.Category
@{
    ViewBag.Title = "Delete category";
}

<h2>Delete category</h2>
<hr />
<div class="container">
    <div class="well">
        @using (Html.BeginForm("Delete", "Category", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.DateCreated)
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <br />
            <div class="form-group">
                @Html.LabelFor(m => m.CategoryName, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Description, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 5, @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-4">
                    <input type="submit" class="btn btn-danger" value="Delete" />
                    @Html.ActionLink("Cancel", "Index", "Category", null, new { @class = "btn btn-default" })
                </div>
            </div>
        }
    </div>
</div>