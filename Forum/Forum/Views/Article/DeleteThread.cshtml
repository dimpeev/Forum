@model Forum.Models.Article
@{
    ViewBag.Title = "Delete thread";
}

<div class="container">
    <div class="well">
        @using (Html.BeginForm("DeleteThread", "Article", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <br />
            <div class="form-group">
                @Html.LabelFor(m => m.Title, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Content, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(m => m.Content, new { @class = "form-control", rows = 5, @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-4">
                    <input type="submit" class="btn btn-danger" value="Delete" />
                    @Html.ActionLink("Cancel", "ViewThreads", "Article", new { @id = Model.CategoryId }, new { @class = "btn btn-default" })
                </div>
            </div>
        }
    </div>
</div>
