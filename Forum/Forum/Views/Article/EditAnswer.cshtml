@model Forum.Models.EditAnswerViewModel
@{
    ViewBag.Title = "Edit answer";
}

<div class="container">
    <div class="well">
        @using (Html.BeginForm("EditAnswer", "Article", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <br />

            <div class="form-group">
                @Html.LabelFor(m => m.Content, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(m => m.Content, new { @class = "form-control", rows = 5})
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-4">
                    <input type="submit" class="btn btn-warning" value="Edit" />
                    @Html.ActionLink("Cancel", "Details", "Article", new { @id = Model.ArticleId }, new { @class = "btn btn-default" })
                </div>
            </div>
        }
    </div>
</div>

