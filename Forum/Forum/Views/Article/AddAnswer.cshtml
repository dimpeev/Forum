@model Forum.Models.AddAnswerViewModel
@{
    ViewBag.Title = "Add answer";
}

<h2>Add answer</h2>
<hr />
<div class="container">
    <div class="well">
        @using (Html.BeginForm("AddAnswer", "Article", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(m => m.ArticleId)
            <br />
            <div class="form-group">
                @Html.LabelFor(m => m.Content, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(m => m.Content, new { @class = "form-control", rows = 5 })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-4">
                    <input type="submit" class="btn btn-success" value="Create" />
                    @Html.ActionLink("Cancel", "Details", "Article", new { @id = Model.ArticleId }, new { @class = "btn btn-default" })
                </div>
            </div>
        }
    </div>
</div>
